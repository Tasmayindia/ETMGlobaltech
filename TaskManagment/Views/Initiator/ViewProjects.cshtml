@model TaskManagment.Models.Request
@{
    ViewBag.Title = "ViewProjects";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<html>
<head>
    <title></title>
    <link href="~/Content/Responsive.css" rel="stylesheet" />
    <script type="text/javascript">
        $(document).ready(function () {
