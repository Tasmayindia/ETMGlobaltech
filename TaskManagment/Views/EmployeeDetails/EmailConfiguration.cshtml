@model TaskManagment.Models.Employee
@{
    ViewBag.Title = "EmailConfiguration";
    Layout = "~/Views/Shared/Layout.cshtml";
}
<script>
    var $jq = jQuery.noConflict();
</script>
<script>
    function OnSubmit()
        {
        var SmtpUrl = document.getElementById("SmtpUrl").value;
        var Port = document.getElementById("Port").value;
        var EmailUserName = document.getElementById("EmailUserName").value;
        var EmailPassword = document.getElementById("EmailPassword").value;
         
        if (SmtpUrl != "" && Port != "" && EmailUserName != "" && EmailPassword != "")
            {
               $("#divLoading").show();
                var ajaxLoading = "<img id='ajax-loader' src='@Url.Content("~/Content/images/Processing.gif")' align='center' height='100' width='100'>";
                $("#divLoading").html("<p style='position: absolute; top: 43%; left: 48%; color:  #666666;'>" + ajaxLoading + "</p>");
            }

        };
</script>
<div class="panel panel-default" style="margin-top:8px;">
    <div style="font-size:18px;color:black;margin-top:5px;"><center><b>Email Configuration</b></center></div>

    @{using (Html.BeginForm("EmailConfiguration", "EmployeeDetails", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

    <div class="panel-body">
        <div class="row">
            <div class="col-lg-2">
                <label for="SmtpUrl" class="col-form-label">SMTP Server IP Addr: <span style="color:red;font-weight:bold;font-size:18px;">*</span></label>
            </div>
            <div class="col-lg-4">
                @Html.TextBoxFor(model => model.SmtpUrl, new { @class = "form-control", @style = "display:inline-block;" })
                <br>
                @Html.ValidationMessageFor(model => model.SmtpUrl, "", new { @class = "text-danger" })

            </div>
            <div class="col-lg-2">
                <label for="Port" class="col-form-label">Port: <span style="color:red;font-weight:bold;font-size:18px;">*</span></label>
            </div>
            <div class="col-lg-4">
                @Html.TextBoxFor(model => model.Port, new { @class = "form-control", @style = "display:inline-block;" })
                <br>
                @Html.ValidationMessageFor(model => model.Port, "", new { @class = "text-danger" })

            </div>

        </div>
        <br>
        <div class="row">
            <div class="col-lg-2">
                <label for="EmailUserName" class="col-form-label">User Name: <span style="color:red;font-weight:bold;font-size:18px;">*</span></label>
            </div>
            <div class="col-lg-4">
                @Html.TextBoxFor(model => model.EmailUserName, new { @class = "form-control", @style = "display:inline-block;" })
                <br>
                @Html.ValidationMessageFor(model => model.EmailUserName, "", new { @class = "text-danger" })

            </div>
            <div class="col-lg-2">
                <label for="EmailPassword" class="col-form-label">Password: <span style="color:red;font-weight:bold;font-size:18px;">*</span></label>
            </div>
            <div class="col-lg-4">
                @Html.PasswordFor(model => model.EmailPassword, new { @class = "form-control", @style = "display:inline-block;" })
                <br>
                @Html.ValidationMessageFor(model => model.EmailPassword, "", new { @class = "text-danger" })

            </div>
        </div>
        <br>

        <div class="row">
            <div class="col-lg-12" align="center">

                <input type="submit" name="Submit" value="Submit" class="btn btn-info" onclick="OnSubmit();">
                <button class="btn btn-info"> @Html.ActionLink("Back", "EmployeeDetails", new { Back = "AdminBack" }, new { @style = "color:white;" })</button>
            </div>
        </div>
    </div>
            @Html.HiddenFor(model => Model.ID)
            @Html.HiddenFor(model => Model.EmailUserName)
            @Html.HiddenFor(model => Model.EmailPassword)
            @Html.HiddenFor(model => Model.Port)
            @Html.HiddenFor(model => Model.SmtpUrl)
            @Html.HiddenFor(model => Model.EmpCode)
            @Html.HiddenFor(model => Model.GalaxyID, new { id = "GalaxyID" })
            @Html.HiddenFor(model => Model.GalaxyIDName, new { id = "GalaxyIDName" })
        }
    }
</div>
<div id="divLoading" style="margin: 0px;padding: 0px; position: fixed; right: 0px;
  top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;align-content:center;
  opacity: .8; filter: alpha(opacity=70);display:none;" align="center" margin-top="50%">
</div>


